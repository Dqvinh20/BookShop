<Page
    x:Class="BookShop.Views.CreateOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="850*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="450*"/>
            <RowDefinition Height="380*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Column="1"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel
            Grid.Column="0"
            Grid.Row="1"
            Background="#2f2f2f"
            Padding="14"
            Margin="0, 0, 30, 25">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35*"/>   
                        <RowDefinition Height="40*"/>
                        <RowDefinition Height="350*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="BOOK OURCHASED" Margin="0 0 0 5" FontSize="13" FontWeight="Medium"/>

                    <Grid Grid.Row="1">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid Grid.Column="0"
                                VerticalAlignment="Center"
                                Margin="2, 0, 0, 0">

                            <Border Name="bookComboBoxBorder"
                                    Height="30"
                            BorderBrush="Black"
                            Background="{Binding Background, ElementName=bookComboBox}"
                            BorderThickness="1"
                            CornerRadius="4">

                            </Border>

                            <ComboBox Name="bookComboBox"
                              HorizontalAlignment="Stretch"
                              Height="26"
                              SelectedIndex="-1"
                              IsEditable="True"
                              HorizontalContentAlignment="Left"
                              BorderThickness="0"
                              Margin="12, 0, 12, 2"
                              SelectionChanged="bookComboBox_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Book Name"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="18, 0, 0, 0" Grid.Column="1">

                            <TextBox Name="importQuantityTextBox"
                                     VerticalAlignment="Center"
                             Margin="2, 0, 0 ,0"
                             FontSize="13"
                             Height="30"
                             PlaceholderText="Quantity"
                             Grid.Column="1"
                             Grid.Row="1"/>
                        </Grid>

                        <Button Name="addBookButton"
                                    Click="addBookButton_Click"
                                    Margin="19,0,0,0"
                                    VerticalAlignment="Center"
                                    Grid.Column="2"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Height="30">


                            <FontIcon Glyph="&#xE710;" FontSize="13"/>
                        </Button>

                    </Grid>

                </Grid>
            </StackPanel>

            <StackPanel
            Grid.Column="1"
            Grid.Row="1"
            Background="#2f2f2f"
            Padding="14"
            Margin="0, 0, 0, 25">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="0.8*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="0.8*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="0.8*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="CUSTOMER" Margin="2 0 0 5" FontSize="12" FontWeight="Medium"/>

                    <TextBox Name="customerTextBox"
                             VerticalAlignment="Top"
                             HorizontalAlignment="Stretch"
                             Margin="2 0 0 0"
                             FontSize="11"
                             PlaceholderText="Tên khách hàng"
                             Grid.Row="1"/>

                    <TextBlock Text="ADDRESS"
                            Grid.Row="2"
                            Margin="2 5 0 5" FontSize="12" FontWeight="Medium"/>

                    <TextBox Name="addressTextBox"
                                     VerticalAlignment="Top"
                             HorizontalAlignment="Stretch"
                             Margin="2 0 0 0"
                             FontSize="11"
                             PlaceholderText="Địa chỉ giao hàng"
                             Grid.Row="3"/>

                    <TextBlock Grid.Row="4" Margin="2 5 0 5" Text="PHONE NUMBER" FontSize="12" FontWeight="Medium"/>


                    <TextBox Name="phoneTextBox" Grid.Row="5"
                                     VerticalAlignment="Top"
                             HorizontalAlignment="Stretch"
                             Margin="2 0 0 0"
                             FontSize="11"
                             PlaceholderText="Số điện thoại"
                             Grid.Column="0"/>
                </Grid>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="200*"/>
            </Grid.RowDefinitions>

            <StackPanel Background="#134b5f" Grid.Row="0" Padding="0 2 0 2">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.12*"/>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="0.05*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Book Name"
                                           Grid.Column="1"
                                            VerticalAlignment="Center"
                               FontWeight="Medium"
                                   Foreground="White"/>

                    <TextBlock Text="Price"
                                           Grid.Column="3"
                                            VerticalAlignment="Center"
                               FontWeight="Medium"
                                   Foreground="White"/>

                    <TextBlock Text="Quantity"
                                           Grid.Column="5"
                                            VerticalAlignment="Center"
                               FontWeight="Medium"
                                   Foreground="White"/>

                    <TextBlock Text="Total Money"
                                           Grid.Column="7"
                                            VerticalAlignment="Center"
                               FontWeight="Medium"
                                   Foreground="White"/>

                </Grid>

            </StackPanel>

            <StackPanel
            Grid.Column="0"
            Grid.Row="1"
            Background="#2f2f2f"
            Padding="0, 14, 0, 14"
            Margin="0, 10, 0, 0">

                <!--<ListView Name="orderPreviewListView"
                  Grid.Column="1"
                  Grid.Row="2"
                  Grid.RowSpan="2"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Margin="0, 0, 10, 0">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Visibility="{Binding Path=isActive, 
                                            Converter={StaticResource isActiveConverter}}"

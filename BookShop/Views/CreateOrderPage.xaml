                </ListView>-->
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3"
                    Grid.Column="1"
                    Margin="0, 10, 0, 0"
                    HorizontalAlignment="Right">

            <Grid Width="300"
                  Margin="0, 10, 0, 0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="1"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     FontWeight="Medium"
                     FontSize="14"
                     Text="TOTAL MONEY"/>

                <!-- binding -->
                <TextBlock Name="totalPriceTextBlock"
                        Grid.Column="1"
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0 0 10 0"
                        FontWeight="Medium"
                        FontSize="14"
                        Text="0 đ"/>
            </Grid>


        </StackPanel>

        <StackPanel Grid.Row="4"
                    Grid.Column="1"
                        Height="30"
                    Orientation="Horizontal"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right">


            <Button Name="cancelOrderButton"
                        Style="{StaticResource AccentButtonStyle}"               
                    Click="cancelOrderButton_Click">

                <FontIcon Glyph="&#xE711;" FontSize="13"/>

            </Button>

            <Button Name="finishOrderButton"
                        Width="162"
                        Margin="18, 0, 0, 0"
                        Style="{StaticResource AccentButtonStyle}"                     
                    Click="finishOrderButton_Click">
                <Grid Width="140">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.9*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>


                    <FontIcon Glyph="&#xEADF;" FontSize="13"/>

                    <TextBlock 
                            HorizontalAlignment="Center"
                            Grid.Column="1"
                            Margin="0, 0, 22, 0"
                            FontSize="13"
                            Text="FINISH ORDER"/>
                </Grid>

            </Button>
        </StackPanel>

        <!-- Post mesage to notification to user here -->
        <StackPanel Name="notiMessageSnackbar"
                                 HorizontalAlignment="Left"
                                 Margin="24, 0, 0, 8"
                                 MaxWidth="1000"
                                 Grid.Column="1"
                                 Grid.Row="4"
                                 Grid.RowSpan="2">
        </StackPanel>
    </Grid>
</Page>
